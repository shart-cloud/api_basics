{
  "name": "API Basics + Terraform Provider Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },

  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      // VS Code extensions for the dev container
      "extensions": [
        // Go development
        "golang.go",

        // Terraform
        "hashicorp.terraform",

        // REST API testing
        "humao.rest-client",

        // JSON formatting
        "esbenp.prettier-vscode",

        // Markdown preview
        "yzhang.markdown-all-in-one",

        // Git
        "eamodio.gitlens",

        // Docker
        "ms-azuretools.vscode-docker"
      ],

      // VS Code settings
      "settings": {
        "go.toolsManagement.autoUpdate": true,
        "go.useLanguageServer": true,
        "go.lintOnSave": "package",
        "go.vetOnSave": "package",
        "[go]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        "[terraform]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "hashicorp.terraform"
        },
        "terraform.languageServer.enable": true,
        "terraform.experimentalFeatures.validateOnSave": true,
        "files.associations": {
          "*.tf": "terraform",
          "*.tfvars": "terraform"
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  // Features to add to the dev container
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": false,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  // Set environment variables
  "containerEnv": {
    "GO111MODULE": "on",
    "GOPATH": "/go",
    "PATH": "/go/bin:/usr/local/go/bin:${localEnv:PATH}"
  },

  // Forward ports for the API and any future services
  "forwardPorts": [
    8787  // Cloudflare Workers dev server
  ],

  // Post create command - install Go tools and dependencies
  "postCreateCommand": "bash .devcontainer/post-create.sh",

  // Keep container running after creation
  "postStartCommand": "bash .devcontainer/post-start.sh",

  // Use 'forwardPorts' to make a list of ports inside the container available locally
  "portsAttributes": {
    "8787": {
      "label": "API Basics Dev Server",
      "onAutoForward": "notify"
    }
  },

  // Mount the workspace
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",

  // Run as non-root user
  "remoteUser": "vscode",

  // Uncomment to connect as root instead
  // "remoteUser": "root",

  // Mounts for preserving data between rebuilds
  "mounts": [
    // Preserve bash history
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.bash_history,target=/home/vscode/.bash_history,type=bind,consistency=cached",

    // Preserve Go module cache
    "source=api-basics-gomodcache,target=/go/pkg/mod,type=volume",

    // Preserve Terraform plugin cache
    "source=api-basics-terraform,target=/home/vscode/.terraform.d,type=volume"
  ]
}
