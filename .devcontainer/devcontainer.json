{
  "name": "API Basics + Terraform Provider Dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.21"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "1.7",
      "installTFsec": false,
      "installTerraformDocs": false
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "hashicorp.terraform",
        "humao.rest-client",
        "esbenp.prettier-vscode",
        "yzhang.markdown-all-in-one",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "go.toolsManagement.autoUpdate": true,
        "go.useLanguageServer": true,
        "go.lintOnSave": "package",
        "go.vetOnSave": "package",
        "[go]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        "[terraform]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "hashicorp.terraform"
        },
        "terraform.languageServer.enable": true,
        "terraform.experimentalFeatures.validateOnSave": true,
        "files.associations": {
          "*.tf": "terraform",
          "*.tfvars": "terraform"
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "containerEnv": {
    "GO111MODULE": "on",
    "TF_PLUGIN_CACHE_DIR": "/home/vscode/.terraform.d/plugin-cache"
  },

  "forwardPorts": [8787],

  "postCreateCommand": "bash .devcontainer/post-create.sh",

  "postStartCommand": "bash .devcontainer/post-start.sh",

  "portsAttributes": {
    "8787": {
      "label": "API Basics Dev Server",
      "onAutoForward": "notify"
    }
  },

  "remoteUser": "vscode",

  "mounts": [
    "source=api-basics-gomodcache,target=/go/pkg/mod,type=volume",
    "source=api-basics-terraform,target=/home/vscode/.terraform.d,type=volume"
  ]
}
